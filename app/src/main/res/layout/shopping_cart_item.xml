<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopping_item_rl"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#fff"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/id_select_cb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/id_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="¥31.9"
        android:textColor="@android:color/holo_red_light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toRightOf="@id/id_select_cb"
        android:background="@color/secondary_text_dark" />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_delete_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_light"
            android:text="删\n除"
            android:textColor="#fff"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_num_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="x10"
            android:textColor="#000"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/id_product_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/ll_head"
        android:layout_toEndOf="@+id/id_select_cb"
        android:layout_toRightOf="@+id/id_select_cb"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/id_product_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/ll_right"
        android:layout_toRightOf="@id/id_product_pic"
        android:padding="5dp"
        android:text="岛津 岛津紫外分光光度计SolidSpec-3700/3700DUV	( )" />


</RelativeLayout>