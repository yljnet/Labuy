<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="150dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_caption_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary_text_dark"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.netsun.labuy.utils.CategoryView
            android:id="@+id/show_first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="3" />

        <LinearLayout
            android:id="@+id/other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.netsun.labuy.utils.CategoryView
                android:id="@+id/show_second"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <com.netsun.labuy.utils.CategoryView
                android:id="@+id/show_third"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/other_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <com.netsun.labuy.utils.CategoryView
                android:id="@+id/show_fourth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <com.netsun.labuy.utils.CategoryView
                android:id="@+id/show_fifth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>