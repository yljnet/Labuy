<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_product_info_rl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorWhiteSmoke"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_product_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/id_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="¥31万-200万"
            android:textColor="@android:color/holo_red_light" />


        <TextView
            android:id="@+id/id_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/id_product_price"
            android:layout_toRightOf="@id/id_product_pic"
            android:ellipsize="end"
            android:lines="2"
            android:textSize="12sp"
            android:text="岛津 岛津紫外分光光度计SolidSpec-3700/3700DUV	dfdfdsfsfsfsfsfs( )"
            android:textColor="#000" />

        <TextView
            android:id="@+id/id_product_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_product_name"
            android:layout_toLeftOf="@id/id_num_text"
            android:layout_toRightOf="@id/id_product_pic"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:lines="4"
            android:layout_marginBottom="5dp"
            android:text="岛津 岛津紫外分光光度计岛津 岛津紫外分光光度计岛津 岛津紫外分光光度计岛津 岛津紫外分光光度计岛津 岛津紫外分光光度计SolidSpec-3700/3700DUV	dfdfdsfsfsfsfsfs( )" />

        <TextView
            android:id="@+id/id_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="x10"
            android:textSize="14sp"
            android:layout_below="@+id/id_product_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单附言："/>
        <EditText
            android:id="@+id/id_remark_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:drawableRight="@drawable/ic_cancel_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhiteSmoke"/>
</LinearLayout>