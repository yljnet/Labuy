<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/address_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/addr_layout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_margin="10dp">

        <CheckBox
            android:id="@+id/id_select_addr_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_consignee_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_mobile_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/id_select_addr_cb"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_toLeftOf="@id/id_select_addr_cb"
            android:padding="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/secondary_text_dark" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/id_address_manage_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/id_address_manage_default_cb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="默认地址" />

        <TextView
            android:id="@+id/id_address_manage_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="编辑" />

        <TextView
            android:id="@+id/id_address_manage_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_delete_black_24dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="删除" />
    </LinearLayout>
</LinearLayout>